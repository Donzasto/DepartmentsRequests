<Window x:Class="DepartmentsRequests.Views.RequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DepartmentsRequests.Views"
        mc:Ignorable="d"
        Title="Заявка" Height="450" Width="600">
	<Window.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="FontSize" Value="14" />
			<Setter Property="Margin" Value="5" />
		</Style>
		<Style TargetType="ComboBox">
			<Setter Property="Margin" Value="5" />
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="0" HorizontalAlignment="Left">
			<TextBlock Text="Подразделение"/>
			<TextBlock Text="Оборудование"/>
			<TextBlock Text="Подающий заявку / Тел. / Почта"/>
		</StackPanel>
		<StackPanel Grid.Column="1" HorizontalAlignment="Left">
			<ComboBox HorizontalAlignment="Left" Width="100"/>
			<ComboBox Width="290"/>
			<StackPanel Orientation="Horizontal">
				<ComboBox Width="120"/>
				<TextBlock Width="50"/>
				<TextBlock Width="100"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
